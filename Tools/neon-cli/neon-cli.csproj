    <EmbeddedResource Remove="Resources\Ubuntu-18.04\updates\**" />
    <None Remove="Resources\Ubuntu-18.04\source\**" />
    <None Remove="Resources\Ubuntu-18.04\updates\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".rnd" />
  </ItemGroup>

  <ItemGroup>
